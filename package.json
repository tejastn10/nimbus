		"@radix-ui/react-tooltip": "^1.2.7",
		"@shikijs/rehype": "^3.4.2",
		"@types/mdx": "^2.0.13",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"gray-matter": "^4.0.3",
		"motion": "^12.12.2",
		"next": "15.3.2",
		"next-themes": "^0.4.6",
		"prettier": "^3.5.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-github-calendar": "^4.5.7",
