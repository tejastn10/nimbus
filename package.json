{
	"name": "nimbus",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint --fix",
		"format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
		"prepare": "husky"
	},
